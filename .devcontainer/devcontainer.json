{
  "name": "Claude Code Training",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "features": {
    "ghcr.io/devcontainers/features/desktop-lite:1": {
      "password": "vscode",
      "webPort": 6080,
      "vncPort": 5901
    }
  },
  // Configure workspace and volumes for improved performance
  "mounts": [
    "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=delegated"
  ],
  "workspaceFolder": "/workspace",
  // Set *default* container specific settings.json values on container create.
  "settings": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": true
    },
    "terminal.integrated.defaultProfile.linux": "fish",
    "terminal.integrated.profiles.linux": {
      "fish": {
        "path": "/usr/bin/fish"
      }
    }
  },
  // Add the IDs of VS Code extensions you want installed
  "extensions": [
    "ms-azuretools.vscode-docker",
    "dbaeumer.vscode-eslint",
    "esbenp.prettier-vscode"
  ],
  // Forward ports for development server and other services
  "forwardPorts": [3000, 5173, 9222, 6080, 5901],
  "portsAttributes": {
    "3000": {
      "label": "Vite Dev Server",
      "onAutoForward": "notify"
    },
    "5173": {
      "label": "Alternative Vite Port",
      "onAutoForward": "notify"
    },
    "9222": {
      "label": "Chrome Remote Debugging",
      "onAutoForward": "notify"
    },
    "6080": {
      "label": "Desktop (noVNC Web Client)",
      "onAutoForward": "notify"
    },
    "5901": {
      "label": "Desktop (VNC)",
      "onAutoForward": "notify"
    }
  },
  // Use 'postCreateCommand' to run commands after the container is created
  "postCreateCommand": "npm install",
  // Skip automatic Google auth to prevent browser issues
  // Users can manually run: gcloud auth application-default login
  "postStartCommand": "echo 'Container started. If needed, run: gcloud auth application-default login'",
  // Configure environment variables (centralized here to avoid duplication)
  "remoteEnv": {
    // Node.js configuration
    "NODE_ENV": "development",
    "NODE_OPTIONS": "--max-old-space-size=4096",
    // Claude Code configuration
    "CLAUDE_CODE_USE_VERTEX": "1",
    "CLOUD_ML_REGION": "us-east5",
    "ANTHROPIC_VERTEX_PROJECT_ID": "sc-claude-code-prod",
    "ANTHROPIC_MODEL": "claude-opus-4-1@20250805",
    // Model-specific region overrides for improved performance
    "VERTEX_REGION_CLAUDE_OPUS_4_1": "us-east5",
    // API request optimization
    "ANTHROPIC_API_REQUEST_TIMEOUT": "60000",
    "ANTHROPIC_ENABLE_CACHE": "true",
    // Shell and locale configuration
    "SHELL": "/usr/bin/fish",
    "LANG": "en_US.UTF-8",
    "LANGUAGE": "en_US:en",
    "LC_ALL": "en_US.UTF-8",
    // Playwright configuration
    "PLAYWRIGHT_BROWSERS_PATH": "/ms-playwright",
    "DISPLAY": ":1.0"
  },
  // Comment out to connect as root instead. More info: https://aka.ms/vscode-remote/containers/non-root.
  "remoteUser": "pwuser",
  // Performance optimization for Claude Code
  "runArgs": [
    "--memory=4g",
    "--memory-swap=4g",
    "--shm-size=2g" // Add shared memory for Chrome
  ]
}
